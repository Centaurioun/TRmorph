!
! These postpostions require either non-case-marked complements
! or genitive case only with a limited set of pronouns.
!

gibi                            nomPostPadj;
için                            nomPostP;
ile                             nomPostP;
kadar                           nomPostPadjKi;
bile                            nomPostP;

! the folllowing only (?) combine with verbal nouns, when they are not
! case marked.
halinde                         nomPostP;
takdirde                        nomPostP;
yerde                           nomPostP;
durumunda                       nomPostP;
halinde                         nomPostP;
nispette                        nomPostP;
oranda                          nomPostP;
ölçude                          nomPostP;
zaman                           nomPostP;

! These require dative
göre                            datPostP;
doğru                           datPostPKi;
kadar                           datPostPKi;
dek                             datPostPKi;
karşı                           datPostPKi;
rağmen                          datPostP;
karşın                          datPostP;
değin                           datPostP;

ait                             datPostPadj;
dair                            datPostPadj;
ilişkin                         datPostPadj;
yönelik                         datPostPadj;

! These take ablative

başka                           ablPostP;
gayrı                           ablPostP;
beri                            ablPostP;
bu% yana                        ablPostP;
dolayı                          ablPostP;
itibaren                        ablPostP;
önce                            ablPostPKi;
evvel                           ablPostPKi;
sonra                           ablPostPKi;
yana                            ablPostP;

ço^k                            ablPostP;      !as in 'benden çok' this is not in G&K
aşağı                           ablPostPKi;
bile                            ablPostP;
fazla                           ablPostP;
öte                             ablPostPKi;
ötürü                           ablPostP;
yukarı                          ablPostP;

! These take instrumental/commutative

beraber                         insPostP; ! Not in G&K
birlikte                        insPostP;


! These require -lI/-sIz
halde                           liPostP;
ilgili                          liPostP;

! These work with numbers
kere                            numPostP;  ! TODO: is this a noun???
kez                             numPostP;  ! TODO: is this a noun???
defa                            numPostP;  ! TODO: is this a noun???

! TODO: tane ??

!--------



! The rest of the postpostions are derived from other 
! word classes (mostly nouns)
! Instead of enumerating them here, we do it in 
! moprhotactics which may also be helpful for 
! syntactic analysis.
!
! these need possesive + dative/locative/ablative suffixes to become 
! postpositions.
!
! they require their complements to be in genitive case (evin önünde)
! or not case marked (okul dışında). It is unclear (to me) what makes 
! these different from noun compounds with case marking.
!
ön                      PostPlocation;
arka                    PostPlocation;
iç                      PostPlocation;
dış                     PostPlocation;
üst                     PostPlocation;
üzer                    uzerCont;! this one is a bound root
alt                     PostPlocation;
yan                     PostPlocation;
karşı                   PostPlocation;
ara                     PostPlocation;
etraf                   PostPlocation;
çevre                   PostPlocation;
öte                     PostPlocation;
kenar                   PostPlocation;
dışarı                  PostPlocation;

!
! these require possessive and ablative case
! complement should be in genitive or 'bare'.
! most of these prefer bare complement
açı                     PostPabl; ! açı-sın-dan 
yüz                     PostPabl; ! yüz-ün-den 
taraf                   PostPabl; ! taraf-ın-dan 
bakım                   PostPabl; ! bakım-ın-dan

! these require possessive and instrumental suffixes.
!
aracılı^k               PostPins; ! aracılığ-ı-yla 
itibar                  PostPins;! itibar-i-yla 
itib^pAr                PostPins;! itibar-i-yla 
vasıta                  PostPins;! vasita-si-yla
neden                   PostPins;! neden-i-yle 
yol                     PostPins;! yol-u-yla 

! ! these require possessive and dative
ad                      PostPdat;! ad-ın-a 
uğu@DEL@r               PostPdat;! uğr-un-a
yer                     PostPdat;! yer-in-e 

! these require possessive and locative
saye                    PostPloc;! ‘shadow’ 
boy                     PostPloc;! boy-un-ca 
konu                    PostPloc;! konu-sun-da 
hak                     PostPloc;! hakk-ın-da 
sıra                    PostPloc;! sıra-sın-de 

! these require possessive and and -cA
! TODO/CHECK: these do not seem to combine with other possessive suffixes
gerek                   PostPca;! gereğ-in-ce 
süre                    PostPca;! süre-sin-ce 
