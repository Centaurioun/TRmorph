!
! This version leaves boundaries on the surface - useful for
! segmentation
!
define morph  @"morph.a";
define phon   @"phon.a";
define morphfilter   @"morph-filter.a";
define analysisfilter   @"analysis-filter.a";
define phonfilter   @"phon-filter-boundary.a";

regex analysisfilter.i 
  .o. [morph .o. morphfilter].l
  .o. phon 
  .o. phonfilter
;
